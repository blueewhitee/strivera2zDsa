#include <iostream>
using namespace std;
void space(int i){
    for(int j=0;j<(i-1);j++){
        cout<<"-";
    }
};

void pattern1(int n){
    int m=n;
    for(int i=1;i<=n;i++){
        int a=2;
        for(int j =1;j<=((2*m)-1);j++){ 
            if(j==1){
            if(a>0){
            if(i>1){
             space(i);
             a--;
            }}};
            cout<<"*";
            if(j==(2*m)-1){
            if(a>0){
            if(i>1){space(i);
            a--;}}}
            
        }
        cout<<endl;
        m--;
        
    }
};
/*void space(int m){
    for(int i=0;i<(((2*m-1)-1)/2);i++){
        cout<<"  ";
    }
};*/
int main(){
    int n;
    cout<<"enter the no: ";
    cin>>n;
    pattern1(n);
    return 0;
}
